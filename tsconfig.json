{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@views/*": [
        "src/app/views/*"
      ],
      "@containers/*": [
        "src/app/containers/*"
      ],
      "@components/*": [
        "src/app/components/*"
      ],
      "@models/*": [
        "src/app/models/*"
      ],
      "@environments/*": [
        "src/environments/*"
      ],
      "@firebase/*": [
        "src/firebase/*"
      ]
    }
  }
}
